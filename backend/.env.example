# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/swapstay

# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_REFRESH_SECRET=your-refresh-token-secret

# Email Service (SendGrid/AWS SES)
EMAIL_API_KEY=your-email-service-api-key
EMAIL_FROM=noreply@swapstay.com

# AWS S3 (for image uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=swapstay-images
AWS_REGION=us-east-1

# University Email Verification API
EDU_VERIFY_API_KEY=your-edu-verification-api-key

# Stripe (for payments if needed)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret